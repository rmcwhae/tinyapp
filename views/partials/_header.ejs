<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success justify-content-between">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (username) { %>
        <span class="navbar-text mr-md-3 text-dark">Logged In As: <%= username %>!</span>
        <form class="form-inline my-2 my-lg-0" method="POST" action="/logout">
          <button type="submit" class="btn btn-outline-dark my-2 my-sm-0">Logout</button>
        </form>
      <% } else { %>
      <form class="form-inline my-2 my-lg-0" method="POST" action="/login">
        <label for="user-name"></label>
        <input class="form-control mr-sm-2" type="text" id="user-name" name="username" placeholder="Username">
        <button type="submit" class="btn btn-outline-dark my-2 my-sm-0">Login</button>
      </form>
      <% } %>
    </div>
  </nav>
</header>